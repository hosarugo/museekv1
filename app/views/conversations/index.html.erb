<div class="row">
    <div class="col-md-5">
        <div class="panel panel-default">
            <div class="panel-heading">Inmail Box</div>
            <div class="panel-body">
                <div class="container">
                    <% @conversations.each do |conversation| %>
                    <% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %>
                    <%= link_to conversation_messages_path(conversation) do %>
                    <div class="row conversation col-md-4">
                        <div class="col-md-2">
                            <%= image_tag avatar_url(other), class:"img-circle avatar-medium" %>
                            <!-- <%= image_tag avatar_url(other), class:"img-circle avatar-medium" %>
                            <%= other.full_name %><br>
                            <%= timeago_tag conversation.messages.last.created_at, :lang=>:fr if conversation.messages.last %>
                            <%= conversation.messages.last.content if conversation.messages.last %> -->
                        </div>
                        <div class="col-md-6">
                            <strong><%= other.full_name %></strong>
                            <br>
                            <%= conversation.messages.last.content if conversation.messages.last %>


                        </div>
                        <div class="col-md-2">
                            <h6><%= timeago_tag conversation.messages.last.created_at, :lang=>:fr if conversation.messages.last %></h6>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-7">

        <div class="panel panel-default">
                   
                        </div>
                        
            </div>
        </div>

    </div>


</div>
