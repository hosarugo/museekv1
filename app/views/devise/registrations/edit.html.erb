<div class="container">
  <div class="row">

    <div class="col-md-3 sticky">



      <li class="well">

       <%= link_to 'Modify my profil', edit_user_registration_path, class: 'sidebar-link active' %>
       <br>
       <%= link_to 'My profil', user_path(current_user.id), class: 'btn btn-default' %>

     </li>



     <br>


   </div>


   <div class="col-md-7 text-center">


     <div class="panel panel-default">

       <div class="panel-heading">My profil</div>

       <div class="panel-body">

        <div class="row">

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render 'shared/devise_errors' %>

          <div class="form-inputs">
            <%= f.input :full_name, required: false, autofocus: true, label: false, placeholder: "Nom complet (prénom + nom)" %>

            <%= f.input :email, required: false, autofocus: true, label: false, disabled: true  %>

            <%= f.input :address, required: false, autofocus: true, label: false, placeholder: "Adresse"%>

            <div class="row">
              <div class="col-md-4">
                <span class="btn btn-default btn-file text-center">
                  Upload photo
                  <%= f.input :avatar, label: false,  as: :file%>
                </span>
              </div>
            </div>
            <br />

              <!-- <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %> -->
              <%= f.input :phone_number, required: false,  label: false, placeholder: "Numéro de téléphone" %>
              <%= f.input :about, rquired: false, rows:5, col:25, label: false, placeholder: "Ma description" %>

              <%= f.input :password, autocomplete: "off", required: false, label: false, placeholder: "Nouveau mot de passe" %>
              <%= f.input :password_confirmation, required: false, label: false, placeholder: "confirmation du mot de passe" %>

            </div>



          </div>
        </div>




        <div class="panel-footer">
          <div class="form-actions">
            <%= f.button :submit, "Save", class: "btn btn-primary", label: false, data: {disable_with:"<i class='fa fa-spinner fa-spin'></i> Saving..." } %>
            <% end %>
          </div>

        </div>
        <%= link_to "Cancel", :back %>
        <br/>
        <p> <%= link_to "Erase my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
    </div>
  </div>
</div>




