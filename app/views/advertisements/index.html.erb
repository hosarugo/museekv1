<div class="row">

      <div class="col-md-3">

            <ul class="sidebar-list">

                   <li class="sidebar-item"><%= link_to "My adds", advertisements_path,
class: "sidebar-link active" %></li>

            </ul>

       </div>

       <div class="col-md-9">

            <div class="panel panel-default">

                 <div class="panel-heading">My adds

                 </div>


                <div class="panel-body">

                      <% @advertisements.each do |advertisement| %>

                         <div class="row">

                                 <div class="col-md-2">

                                      <%= image_tag advertisement.photos[0].image.url(:thumb) if advertisement.photos.length > 0 %>

                                 </div>

                                 <div class="col-md-7">
                                      <h4><%= advertisement.listing_name %></h4>
                                    <br />
                                      <a href="<%= advertisement_path(advertisement.id) %>">See details</a>
                                      <br />
                                      <br />
                                      <b>Created at:  </b><%= advertisement.created_at.strftime("%d-%m-%y") %>

                                 </div>

                                 <div class="col-md-3 right">

                                     <%= link_to "Update ad", edit_advertisement_path(advertisement),
                                                                  class: "btn btn-primary" %>

                                 </div>

                        </div>

                        <hr>

                   <% end %>

               </div>

           </div>

     </div>

 </div>
