
    <div class="col-md-3 text-center">
        <%= image_tag avatar_url(@other), class:"img-circle avatar-medium" %><br>
        <strong><%= @other.full_name %></strong><br>
        <%= link_to "See profil", @other, class:"btn btn-default wide" %>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chat with <%= @other.full_name %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <%= form_for [@conversation, @conversation.messages.new], remote: true do |f| %>
                        <div class="form-group">
                            <%= f.text_area :content, placeholder:"Your message...", class:"form-control" %>
                        </div>
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <div class="actions">
                            <%= f.submit "Send a message", class:"btn btn-primary" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        <div id="chat">
            <%= render @messages, locals: {conversation: @conversation} %>
        </div>
    </div>

